{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
{% endblock %}

{% block main %}
    <div class="container">
        <h1>Liste des utilisateurs</h1>

        <form action="{{ path('app_users') }}" method="post">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Sélectionner</th>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in participants %}
                    <tr>
                        <td><input type="checkbox" name="selected_ids[]" value="{{ participant.id }}"></td>
                        <td>{{ participant.id }}</td>
                        <td>{{ participant.email }}</td>
                        <td>{{ participant.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% if participants|length > 0 %}
                <button type="submit" class="btn btn-primary">Supprimer les utilisateurs sélectionnés</button>
            {% else %}
                <p class="text-muted">Aucun utilisateur à supprimer.</p>
            {% endif %}
        </form>
    </div>
{% endblock %}
