{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title text-center">Réinitialisez votre mot de passe</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(requestForm, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-group mb-3">
                            {{ form_label(requestForm.email) }}
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">
                                Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary">Envoyer l'e-mail de réinitialisation</button>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
